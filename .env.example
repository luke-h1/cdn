# AWS Configuration
AWS_REGION=eu-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 Storage
S3_BUCKET_NAME=lho-cdn

# DynamoDB (for short links)
DYNAMODB_TABLE_NAME=lho-cdn-links

# Public URLs
# CDN URL - Assets served via Vercel /cdn route (S3 bucket stays private)
NEXT_PUBLIC_CDN_URL=https://cdn-viewer.lhowsam.com/cdn
# Admin URL - Vercel site for the viewer/admin interface (used for short links)
NEXT_PUBLIC_ADMIN_URL=https://cdn-viewer.lhowsam.com

# Basic Auth for admin API (optional)
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD=your-password
